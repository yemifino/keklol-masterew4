<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="4dp">
    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:src="@drawable/gaz"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toLeftOf="@id/cost"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:textSize="20sp"
            card_view:layout_constraintLeft_toRightOf="@id/icon"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toTopOf="@id/cost"
            card_view:layout_constraintRight_toLeftOf="@id/plus"
            android:textColor="@color/black"
            android:fontFamily="@font/courier"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cost"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:textSize="20sp"
            card_view:layout_constraintTop_toBottomOf="@id/name"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@id/icon"
            card_view:layout_constraintRight_toLeftOf="@id/plus"
            android:textColor="@color/black"
            android:fontFamily="@font/courier"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/plus"
            android:src="@drawable/more"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toRightOf="@id/name"
            android:layout_marginRight="10dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>