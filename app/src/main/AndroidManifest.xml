<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sasha.smarthcs">

    <application
        android:permission="android.permission.ACCESS_WIFI_STATE"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Cabinet"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WaterInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GazInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LightInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TotalInfo"
            android:screenOrientation="portrait" />
    </application>

</manifest>